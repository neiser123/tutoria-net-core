@model CrearAmigoModelo
@{
    Layout = "~/Views/share/_Layout.cshtml";
    ViewBag.Title = "NUEVO AMIGO";

}
<br />
<form asp-controller="Home" asp-action="create" method="Post" enctype="multipart/form-data">

    <div class="form-group row">
        <label asp-for="nombre" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="nombre" class="form-control" placeholder="Nombre" />
            <span asp-validation-for="nombre" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="email" class="form-control" placeholder="Email" />
            <span asp-validation-for="email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ciudad" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="ciudad" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Ciudad>()">
                <option value="">SELECION UNO.</option>
            </select>
            <span asp-validation-for="ciudad" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Foto" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
            <input asp-for="Foto" class="form-control custom-file-input" />
            <label  class="custom-file-label">SELECIONE UN FICHERO</label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Nuevo</button>
        </div>
    </div>


    @section Scripts{
     <script>
         //mantiene el nombre de la imagen al selecionarla para que no se pierda
         $(document).ready(function () {
             $('.custom-file-input').on("change", function () {
                 var filename = $(this).val().split("\\").pop();
                 $(this).next('.custom-file-label').html(filename);
             });
         });
    
    </script>

     }


</form>
